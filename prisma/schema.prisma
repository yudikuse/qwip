// ===== Prisma Header =====
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===== Models =====
model Ad {
  id           String   @id @default(cuid())
  title        String
  description  String
  priceCents   Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // === IMAGEM (persistida em storage) ===
  imageUrl     String?           // <- AGORA OPCIONAL
  imageMime    String?
  imageWidth   Int?
  imageHeight  Int?
  imageSha256  String?

  @@index([imageSha256])
}
